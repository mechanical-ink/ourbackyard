{
  "name": "ourbackyard",
  "version": "0.0.1",
  "description": "Connecting people with local businesses",
  "main": "app.js",
  "scripts": {
    "build": "parcel views/index.pug",
    "build:sass": "node-sass-chokidar ./static/sass/ -o ./static/style/",
    "build:sass:dev": "node-sass-chokidar ./static/sass/ -o ./static/style/ -w",
    "server": "nodemon app.js",
    "start": "run-p build:sass:dev server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/schalkneethling/ourbackyard.git"
  },
  "keywords": [
    "sass",
    "html",
    "js",
    "nodejs"
  ],
  "author": "Schalk Neethling",
  "license": "MIT",
  "devDependencies": {
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "node-sass-chokidar": "^1.4.0",
    "nodemon": "2.0.4",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "1.12.4",
    "sass": "^1.26.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.15",
    "nodemailer": "6.4.6",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "pug": "2.0.4",
    "rollbar": "^2.16.2",
    "sitemap": "^6.1.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
